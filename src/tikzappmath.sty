% Command to connect to nodes and label it at the middle
\newcommand{\connectcnode}[4]
{
   \draw[carrow] (#1) -- (#2); 
   \node[above] (above) at  ($(#1)!0.5!(#2)$) {#3};
   \node[below] (below) at ($(#1)!0.5!(#2)$) {#4} ;
  }


